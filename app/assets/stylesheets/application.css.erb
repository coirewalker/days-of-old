* {
	margin: 0;
	padding: 0;
}

body {
	color: #fff;
	font-family: 'Open Sans', sans-serif; 
	
}

h1 {
		margin-top: 0px;
}
	
h2 {
	margin-bottom: 30px;
	font-size: 1.7em;
	text-shadow: 0 0 2px;
}

.article-title h2 {
	margin-left: 50px;
	margin-top: 20px;
	text-shadow: 0 0 2px;
}

.bg {	
	background-image: url(<%= asset_path 'LA-bg.jpg' %>);
	background-repeat: no-repeat;
	background-size: cover;
}

section {
	height: 100vh;
}

article {
	margin: 0px auto;
	padding-top: 70px;
	padding-left: 5%;
	padding-right: 5%;
	width: 70%;
	height: 100%;
	background-color: rgba(255,255,255, .3);
	opacity: 1;
	box-shadow: 0px 0px 15px rgba(000, 000, 000, .4);
}

article p {
	text-align: left;
	font-size: .95em;
	line-height: 2.2em;
	text-shadow: 0px 0px 7px black;

}

.post {
	padding: 150px 0px;
}

