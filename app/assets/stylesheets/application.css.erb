article {
	width: 100%;
	height: 100%
}

.article-content {
	float: right;
	padding: 40px;
	font-size: .9em;
	line-height: 2em;
	text-align: right;
	width: 300px;
	text-shadow: 2px 0px 5px black;
/*	background: rgba( 0, 0, 0, .1);
	border-radius: 5px;*/
}

.article-title h2 {
	float: left;
	padding: 40px;
	text-shadow: 2px 0px 5px black;
}



footer {
	bottom: 0px;
	background-color: #B40404;
	height: 60px;
	width: 100%;
	position: relative;
	border-top: 1px solid black;
	border-bottom: 1px solid black;
}





















