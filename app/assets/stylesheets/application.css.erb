	height: 70px; 
	z-index: 1;
}
/****************/

header {
	margin: 0px;
	height: 75px;
	width: 100%;
	color: white;
	text-align: center;
	background-color: #B40404;
	border-top: 1px solid black;
	border-bottom: 1px solid black;
}

nav {
	position: absolute;
	bottom: -10px;
	width: 100%;
	height: 68px;
	background: #B40404;
	text-align: center;
	border-top: 1px solid black;
	border-bottom: 1px solid black;
}

nav ul {
	margin-top: 20px;
}

nav li a {
	color: white;
	text-decoration: none;
}

nav li a:hover {
	color: #F5A9BC;
}

nav li {
	display: inline-block;
	padding: 0px 10px;
}

section {
	height: 100vh;
}

.logo {
	float: left;
	padding-left: 35px;
}

.logo li {
	display: inline-block;
}

.logo h1 {
	font-size: 4.5em;
	line-height: 1em;
}



 .footer-logo li {
	display: block;
	text-decoration: none;
	text-align: center;	
}

.footer-logo h1 {
	font-size: 1.3em;
}

.footer-logo h5 {
	font-size: .2em;
}

.footer-logo {
	margin: 0px auto;
	padding-top: 10px;
}


.slogan {
	position: absolute;
	top: 50px;
	right: 20px;

}


