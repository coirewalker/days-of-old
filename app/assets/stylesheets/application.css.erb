/* jQuery nav fixed class **/

.fixed {
	position: fixed; 
	top: 0; 
	height: 60px; 
	z-index: 1;
}

.fixed-bottom {
	position: fixed; 
	bottom: 0; 
	height: 276px; 
	z-index: 1;
}

nav {
	position: absolute;
	bottom: -15px;
	width: 100%;
	height: 60px;
	background: #B40404;
	text-align: center;
	border-top: 1px solid black;
	border-bottom: 1px solid black;
}


/****************/

header {
	margin: 0px;
	height: 75px;
	width: 100%;
	padding-bottom: 5px;
	color: white;
	text-align: center;
	background-color: #B40404;
	border-top: 1px solid black;
	border-bottom: 1px solid black;
}

.slogan {
	position: absolute;
	top: 20px;
	right: 30px;
	text-shadow: 1px 0px black;
}

.slogan h5 {
	padding-right: 20px;
}
.slogan ul {
	display: block;
}

.slogan li {
		display: inline-block;
}

.slogan a {
	text-decoration: none;
}

#follow {
	padding: 8px;
	border: 1px solid white;
	background-color: black;
	color: white;
	border-radius: 2px;
	display: inline-block;
	opacity: 1;	
}

#follow:hover {
	text-shadow: none;
	background-color: rgba(249, 40, 1, .7);
/*	color: #c6c6c6;
	border: 1px solid #c6c6c6;*/
	-webkit-opacity: 1;
  -moz-opacity: 1;
  opacity: 1;
-webkit-transition: all 500ms ease-in;
  -moz-transition: all 500ms ease-in;
  -ms-transition: all 500ms ease-in;
  -o-transition: all 500ms ease-in;
  transition: all 500ms ease-in;	
}

nav ul {
	margin-top: 20px;
}

nav li a {
	color: white;
	text-decoration: none;
}

nav li a:hover {
	color: black;
}

nav li {
	display: inline-block;
	padding: 0px 10px;
	text-shadow: 0px 1px black;
}

.logo {
	float: left;
	padding-left: 35px;
}

.logo li {
	display: inline-block;
	text-shadow: 1px 0px black;
}

.logo h1 {
	font-size: 4.5em;
	line-height: 1em;
}

.img-l {
	width: 46%;
	display: inline-block;
	text-align: left;
	border: 1px solid white;
	border-radius: 5px;
	margin-right: 6%;
}

.img-r {
	width: 46%;
	display: inline-block;
	border: 1px solid white;
	border-radius: 5px;
}

.img-div {
	display: block;
	text-align: center;
	width: 100%;	
	margin: 0px;
	padding-bottom: 30px;
}


/*********************************/
/**** FOOTER *********************/
/*********************************/

footer {
	width: 100%;
	position: absolute;
}

.footer-banner {
	margin: 0px auto;
	padding-top: 5px;
	padding-bottom: 20px;
	background-color: #B40404;
	height: 30px;
	width: 100%;
	border-top: solid 1px black;
}

.footer-banner li {
	display: block;
	text-decoration: none;
	text-align: center;	
	text-shadow: 0px 1px black;
}

.footer-banner h1 {
	font-size: 1.3em;
}

.footer-banner h5 {
	font-size: .2em;
}

/************/

.footer-bar {
	background-color: black;
	height: 220px;
	opacity: .8;
	width: 100%;
}

.footer-bar ul {
	text-align: center;	
}

.footer-bar li a {
	color: white;
	text-decoration: none;
}

.footer-bar li a:hover {
	color: #B40404;
}

.footer-bar li {
	display: inline-block;
	padding: 25px 10px;
}

/**  WAYPOINTS: *******/

.stick {
	position: fixed;
	bottom: 0;
}

.waypoint-wrapper {
	position: relative;
}

nav.fade-out {
	-webkit-opacity: 0;
  -moz-opacity: 0;
  opacity: 0;
-webkit-transition: all 500ms ease-in-out;
  -moz-transition: all 500ms ease-in-out;
  -ms-transition: all 500ms ease-in-out;
  -o-transition: all 500ms ease-in-out;
  transition: all 500ms ease-in-out;	
}

nav.fade-in {
	-webkit-opacity: 1;
  -moz-opacity: 1;
  opacity: 1;
-webkit-transition: all 500ms ease-in-out;
  -moz-transition: all 500ms ease-in-out;
  -ms-transition: all 500ms ease-in-out;
  -o-transition: all 500ms ease-in-out;
  transition: all 500ms ease-in-out;	
}



